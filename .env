###############################################
# CONFIG BÁSICA (solo ver webcam + reconexión)
# Guarda este archivo como ".env" junto al script.
###############################################

########## FUENTE (HTTP snapshot) ##########
# Página principal del servidor de la webcam (Yaw/servidor).
SNAPSHOT_HOME=http://192.168.1.37:9090/

# (Opcional) Si ya conoces la URL del snapshot con id FIJO, ponla aquí.
# Si la dejas vacía, el script la descubrirá solo (Selenium → Redirección → HTML).
SNAPSHOT_URL=

# (Opcional) Cabeceras extra si tu servidor las exige
SNAPSHOT_REFERER=http://192.168.1.37:9090/
SNAPSHOT_COOKIE=

########## DISCOVERY (Selenium) ##########
# Usa Selenium (headless) para descubrir el <img src="...out.jpg?id=..."> generado por JS.
USE_SELENIUM_DISCOVERY=true
# Navegador: chrome | edge
SELENIUM_BROWSER=chrome

########## VENTANA ##########
# Mostrar ventana con la imagen. Pulsa ESC para salir.
SHOW_WINDOW=true
# (Opcional) Título de la ventana
WINDOW_TITLE=Webcam (solo vista)

# --- TELEGRAM (solo texto al iniciar/parar) ---
TG_BOT_TOKEN=7675573055:AAE_veIoXfLPTRUzftPLqYQx2aLKVVP5Ano
TG_CHAT_ID=549175092


###############################################
# MOTION (detección y dibujo de cajas)
###############################################
ENABLE_MOTION=true          # activa/desactiva la detección
THRESH=10                   # 0..255 (más alto = menos sensible)
MIN_AREA=800              # área mínima (en px del frame procesado)
PROC_WIDTH=480              # ancho al que se reescala para procesar (rendimiento)
DILATE_ITERS=2              # iteraciones de dilatación (une “islas” cercanas)
MERGE_PADDING=5            # unión de cajas cercanas/solapadas (px, en el frame procesado)

# Color de la caja (hex). Ej.: #ffa500 (naranja), #00ff00 (verde), #ff0000 (rojo)
BOX_COLOR=#ffa500
BOX_THICKNESS=2             # grosor de línea (px, en el frame original)


# === Control de armado por Telegram ===
ALLOW_TG_COMMANDS=true
ARMED_ON_BOOT=false

# (Opcional) Ruta para estado/frames en tiempo de ejecución
RUNTIME_DIR=C:/Users/angelitorogo/Desktop/Pruebas_Docker/DETECTION/runtime

# === Grabación de clips ===
RECORD_ON_MOTION=true
CLIP_DIR=clips                 # relativa a RUNTIME_DIR (o usa ruta absoluta)
PRE_ROLL_SEC=1
POST_ROLL_SEC=2
QUIET_GAP_SEC=1
MAX_CLIP_SEC=10
MAX_DISK_GB=1                 # borra clips antiguos al superar el límite

# === Vídeo / codificador ===
VIDEO_FPS=12                   # fps target de salida; si no se define, se estima
VIDEO_CODEC=mp4v               # fourcc: mp4v suele ser el más compatible
VIDEO_JPEG_QUALITY=90          # para snapshots (ya lo usabas como PHOTO_JPEG_QUALITY)

# === Envío opcional de clips a Telegram ===
TG_SEND_CLIPS=true            # true para enviar clips al cerrar sesión de actividad
TG_CLIP_COOLDOWN_SEC=30        # evita inundar con muchos clips seguidos